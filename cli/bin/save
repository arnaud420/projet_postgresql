#!/usr/bin/env node
/*
 *  Github/TonyChG
 *  index.js
 *  Description:
**/

// Specify root dir
require('app-module-path').addPath(__dirname + '/..')

const config = require('config');

// Import classes
const Manager = require('lib/manager');
const Command = require('lib/command');

async function main() {
    // const cmd = new Command(process.argv);
    const manager = new Manager(config.database.connection);

    // Test mysql connection
    await manager.testConnection();

    // Get databases
    console.log(await manager.listDatabases());

    console.log(manager.backups.load())
    console.log(manager.backups.sort())

    try {
        const newSave = await manager.save()
        console.log(newSave)
    } catch(e) {
        console.error(e.message)
    }
}

main();

